<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"
    tools:ignore="ExtraText">

    //To create the line around the shape, and the color of the line, aka stroke
    <stroke
        android:width="1dp"
        android:color="@color/colorPrimaryMain"/>

    //To give the fill of the shape, use keyword "solid"
    <solid
        android:color="@color/colorPrimaryMain" />

    //To make the corners rounded
    <corners android:radius="25dp"/>

    //To give the shape padding
    <padding
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
    </padding>

</shape>